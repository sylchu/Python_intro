#python 2.7

#getting started with if / elif / else
#create a function called greet, address each name in the correct language
#3 names, 3 languages



def greet(lang):
    if lang=='es':
        return 'Hola'
    elif lang=='fr':
        return 'Bonjour'
    else:
        return 'Hello'

print(greet('en'), 'Glenn')
print(greet('es"'), 'Sally')
print(greet('fr'), 'Michael')
